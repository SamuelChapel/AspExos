@model List<Message>

<table class="table table-hover table-bordered">
    <thead class="thead-light">
        <tr>
            <th scope="col">Emetteur</th>
            <th scope="col">Contenu</th>
            <th scope="col">Date</th>
            <th scope="col">Details</th>
            <th scope="col">Editer</th>
            <th scope="col">Supprimer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Message message in Model)
        {
            <tr>
                <td>@message.Emetteur</td>
                <td>@message.Contenu</td>
                <td>@message.Date.ToShortDateString()</td>
                <td>
                    <a class="btn btn-primary"
                       asp-controller="MessageDb"
                       asp-action="GetMessage"
                       asp-route-id="@message.Id">
                        Détails
                    </a>
                </td>
                <td>
                    <a class="btn btn-warning"
                       asp-controller="MessageDb"
                       asp-action="EditMessage"
                       asp-route-id="@message.Id">
                        Editer
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger"
                       asp-controller="MessageDb"
                       asp-action="DeleteMessage"
                       asp-route-id="@message.Id"
                       onclick="return confirm('Voulez-vous vraiment supprimer le message @message.Id ?');">
                        Supprimer
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>